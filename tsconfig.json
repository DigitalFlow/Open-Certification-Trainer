{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "CommonJS",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "target": "es2020",
        "jsx": "react",
        "paths": {
            "*": [
                "./node_modules/*",
                "./src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}
